# Environment Configuration
# Copy this file to .env and fill in your values

# Node Environment (development, production)
NODE_ENV=development

# Server Port
PORT=3004

# Database Configuration
# Leave empty for local JSON file database
# Set to PostgreSQL connection string for production
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=

# Railway Production Database (for syncing data)
# Get this from your Railway PostgreSQL service
RAILWAY_DATABASE_URL=

# CORS Configuration
# Leave empty for local development (allows all origins)
# Set to your frontend URL in production
# Example: https://your-app.railway.app
ALLOWED_ORIGIN=

# Data Directory (for JSON file mode)
DATA_DIR=./data

# Seed File (for JSON file mode)
SEED_FILE=./db.json

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
